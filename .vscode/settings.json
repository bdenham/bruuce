{
  "editor.formatOnSave": true,
  "files.associations": {
    "*.css": "css",
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 140,
  "markdown.updateLinksOnFileMove.enabled": "never",
  "markdown.validate.enabled": false,
  "markdown.validate.ignoredLinks": [
    "/content/**/*.mdx"
  ],
  "markdown.validate.fileLinks.enabled": "ignore",
  "markdown.validate.fragmentLinks.enabled": "ignore",
  "github.copilot.advanced": {
    "no-such-reference": "ignore"
  },
  // "mdx.validate.validateMarkdownFileLinkFragments": "ignore",
  // "mdx.validate.ignoreLinks": ["./src/**/*.mdx"],
  // "mdx.validate.validateFileLinks": "ignore",
  // "mdx.validate.validateFragmentLinks": "ignore",
  "mdx.validate.validateReferences": "error",
  // "mdx.validate.validateUnusedLinkDefinitions": "ignore",
  // "mdx.validate.validateDuplicateLinkDefinitions": "ignore",
  "markdown.preview.linkify": false,
  // "markdown.validate.fileLinks.markdownFragmentLinks": "ignore",
  // "markdown.editor.filePaste.enabled": false,
  // "markdown.suggest.paths.enabled": false,
  // "markdown.suggest.paths.includeWorkspaceHeaderCompletions": "never",
  // "markdown.math.enabled": false,
  // "markdown.validate.referenceLinks.enabled": "ignore",
  "markdown.occurrencesHighlight.enabled": true,
  "markdown.validate.unusedLinkDefinitions.enabled": "ignore",
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
  },
  "mdx.trace.server.verbosity": "verbose",
  "mdx.validate.validateFileLinks": "error",
  "mdx.validate.validateFragmentLinks": "error",
  "mdx.validate.validateMarkdownFileLinkFragments": "error",
  "mdx.validate.validateUnusedLinkDefinitions": "error",
  "[mdx]": {
    "editor.defaultFormatter": "unifiedjs.vscode-mdx"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
}
