---
export interface Props {
  text: string;
  linkText?: string;
  linkHref?: string;
}

const { text, linkText, linkHref } = Astro.props;
---

<footer>
  <div class="footer-content">
    <div class="footer-text">
      {text}
      {linkText && linkHref && <a href={linkHref}>{linkText}</a>}
    </div>

    <!-- Additional navigation for crawlability -->
    <nav class="footer-nav" aria-label="Footer navigation">
      <a href="/">Home</a>
      <a href="/about/">About</a>
      <a href="/work/">Work</a>
      <a href="/resume/">Resume</a>
      <a href="/projects/">Projects</a>
      <a href="/blog/">Blog</a>
    </nav>

    <!-- Copyright notice -->
    <div class="copyright">
      Â© {new Date().getFullYear()} Bruce Denham. All rights reserved.
    </div>
  </div>
</footer>

<style>
  .footer-content {
    display: flex;
    flex-direction: column;
    gap: 16px;
    align-items: flex-start;
  }

  .footer-nav {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: flex-start;
  }

  .footer-nav a {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 1rem;
    padding: 4px 8px;
    border-radius: 4px;
    transition: color 0.2s ease;
  }

  .footer-nav a:hover {
    color: var(--accent-primary);
  }

  .copyright {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-top: 8px;
  }

  @media (max-width: 640px) {
    .footer-nav {
      gap: 12px;
    }

    .footer-nav a {
      font-size: 13px;
      padding: 4px 6px;
    }

    .copyright {
      font-size: 0.8125rem;
      margin-top: 12px;
    }
  }
</style>
