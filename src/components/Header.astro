---
import ThemeToggle from './ThemeToggle.astro';
---

<header class="header">
  <!-- Left section with menu toggle, site name, and navigation -->
  <div class="header-left">
    <!-- Mobile menu toggle - only for very small screens -->
    <button class="mobile-menu-toggle" id="mobile-menu-toggle" aria-label="Menu">â˜°</button>
    
    <!-- LCP element optimized for immediate rendering -->
    <a href="/" class="site-name">Bruce Denham</a>
    
    <!-- Visual separator between site name and navigation -->
    <div class="nav-separator"></div>
    
    <!-- Navigation - visible until 640px, aligned with site name -->
    <nav class="main-nav" aria-label="Main navigation">
      <a href="/about/" class="nav-link">About</a>
      <a href="/work/" class="nav-link">Work</a>
      <a href="/projects/" class="nav-link">Projects</a>
      <a href="/blog/" class="nav-link">Blog</a>
    </nav>
  </div>

  <div class="header-right">
    <!-- Simplified social links - no complex SVGs blocking LCP -->
