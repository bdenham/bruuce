---
import ThemeToggle from './ThemeToggle.astro';
---

<header class="header">
  <!-- LCP element optimized for immediate rendering -->
  <a href="/" class="site-name">Bruce Denham</a>

  <div class="header-right">
    <!-- Simplified social links - no complex SVGs blocking LCP -->
    <div class="social-links">
      <a href="https://github.com/bdenham" target="_blank" rel="noopener" class="social-link"
        >GitHub</a
      >
      <a
        href="https://linkedin.com/in/brucedenham"
        target="_blank"
        rel="noopener"
        class="social-link">LinkedIn</a
      >
      <a href="mailto:brucedenham@mac.com" class="social-link">Email</a>
    </div>

    <ThemeToggle />
  </div>
</header>

<style>
  /* Minimal styles for fast LCP rendering */
  .header-right {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .social-links {
    display: flex;
    gap: 12px;
  }

  .social-link {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 14px;
    padding: 4px 8px;
    border-radius: 4px;
  }

  .social-link:hover {
    color: var(--accent-primary);
  }
</style>
