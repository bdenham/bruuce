---
import { PAGE_TITLE_ID } from '../constants';
import CallToAction from './CallToAction.astro';

const { data } = Astro.locals.starlightRoute.entry;
const { title = data.title, subtitle, tagline, actions = [] } = data.hero || {};
---

<div class="hero">
  <div class="matrix-bg" aria-hidden="true"></div>
  <div class="content">
    <h1 id={PAGE_TITLE_ID} data-page-title set:html={title} />
    {subtitle && <div class="subtitle" set:html={subtitle} />}
    {tagline && <div class="tagline" set:html={tagline} />}
    {
      actions.length > 0 && (
        <div class="actions">
          {actions.map(({ text, ...attrs }: { text: string; [key: string]: any }) => (
            <CallToAction {...attrs} variant={attrs.variant} link={attrs.link} set:html={text} />
          ))}
        </div>
      )
    }
  </div>
</div>

<style>
  .hero {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
    background: #000;
    overflow: hidden;
    margin: -1.5rem -2rem 2rem -2rem;
  }

  /* Animated Matrix-style background */
  .matrix-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
      linear-gradient(90deg, transparent 79px, #0ff 81px, #0ff 82px, transparent 84px),
      linear-gradient(transparent 79px, #0ff 81px, #0ff 82px, transparent 84px), #000;
    background-size: 80px 80px;
    animation: matrix-scan 8s linear infinite;
    opacity: 0.1;
    z-index: 1;
  }

  .matrix-bg::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
      radial-gradient(ellipse at 20% 50%, #ff006e 0%, transparent 50%),
      radial-gradient(ellipse at 80% 20%, #8338ec 0%, transparent 50%),
      radial-gradient(ellipse at 40% 80%, #3a86ff 0%, transparent 50%);
    opacity: 0.3;
    animation: pulse 4s ease-in-out infinite alternate;
  }

  .matrix-bg::after {
    content: 'INITIALIZING... > LOADING DATA... > ACCESS GRANTED... > SYSTEM ONLINE...';
    position: absolute;
    top: 10%;
    left: 0;
    width: 100%;
    color: #0ff;
    font-family: 'Courier New', monospace;
    font-size: 12px;
    font-weight: bold;
    letter-spacing: 2px;
    opacity: 0.6;
    animation: typing-text 12s linear infinite;
    white-space: nowrap;
    overflow: hidden;
  }

  .content {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 2rem;
    max-width: 800px;
  }

  h1 {
    font-size: clamp(2rem, 6vw, 4rem);
    font-weight: 900;
    color: #fff;
    margin-bottom: 1rem;
    text-shadow:
      0 0 20px #0ff,
      0 0 40px #0ff,
      0 0 60px #0ff;
    animation: neon-flicker 2s ease-in-out infinite alternate;
  }

  .subtitle {
    font-size: clamp(1.2rem, 3vw, 2rem);
    color: #0ff;
    margin-bottom: 1.5rem;
    font-weight: 300;
    animation: subtitle-glow 3s ease-in-out infinite alternate;
  }

  .tagline {
    font-size: 1.2rem;
    color: #ff006e;
    margin-bottom: 2rem;
    max-width: 60ch;
    line-height: 1.6;
  }

  .actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Cyberpunk animations */
  @keyframes matrix-scan {
    0% {
      transform: translateY(-100%);
    }
    100% {
      transform: translateY(100vh);
    }
  }

  @keyframes pulse {
    0% {
      opacity: 0.2;
    }
    100% {
      opacity: 0.4;
    }
  }

  @keyframes typing-text {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  @keyframes neon-flicker {
    0%,
    100% {
      text-shadow:
        0 0 20px #0ff,
        0 0 40px #0ff,
        0 0 60px #0ff;
      opacity: 1;
    }
    50% {
      text-shadow:
        0 0 10px #0ff,
        0 0 20px #0ff,
        0 0 30px #0ff;
      opacity: 0.8;
    }
  }

  @keyframes subtitle-glow {
    0% {
      color: #0ff;
      text-shadow: 0 0 10px #0ff;
    }
    100% {
      color: #ff006e;
      text-shadow: 0 0 15px #ff006e;
    }
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    .hero {
      min-height: 50vh;
      margin: -1rem -1rem 1rem -1rem;
    }

    .content {
      padding: 1rem;
    }

    .matrix-bg::after {
      font-size: 10px;
      top: 5%;
    }
  }
</style>
