---
import type { Props } from "@astrojs/starlight/props";

// Check if we're on the commerce-services page
const isCommerceServicesPage = Astro.url.pathname.includes(
  "/playgrounds/commerce-services",
);
---

<div class="content-panel">
  <div
    class={`sl-container ${isCommerceServicesPage ? "full-width-container" : ""}`}
  >
    <slot />
  </div>
</div>

<style>
  .content-panel {
    padding: 1.25rem var(--sl-content-pad-x);
  }
  .sl-container {
    max-width: var(--sl-content-width);
  }
  .full-width-container {
    max-width: none !important;
  }
  .sl-container > :global(* + *) {
    margin-top: 0;
  }
  .home-page-container {
    max-width: none !important;
  }
</style>
