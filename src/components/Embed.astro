---
interface Props {
  src: string;
  height?: number;
}

const { src, height } = Astro.locals.starlightRoute;
---

<iframe
  id="story"
  title={src}
  src={src}
  allow="clipboard-read; clipboard-write"
  width="100%"
  height=`${height}px`
  style="border: 1px solid #999999; overflow: hidden;"></iframe>

