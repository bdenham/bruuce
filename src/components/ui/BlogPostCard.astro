---
import Tags from '../Tags.astro';

interface Props {
  post: {
    slug: string;
    data: {
      title: string;
      excerpt: string;
      date: Date;
      category?: string;
      tags?: string[];
      featured?: boolean;
      author?: string;
    };
  };
  showEmoji?: boolean;
  showCategory?: boolean;
  showTags?: boolean;
  showFeatured?: boolean;
}

const { 
  post, 
  showEmoji = true, 
  showCategory = false, 
  showTags = false,
  showFeatured = false
} = Astro.props;
---

<article class={`blog-post-card ${showFeatured && post.data.featured ? 'featured' : ''}`}>
  <a href={`/blog/${post.slug}/`} class="card-link" aria-label={`Read: ${post.data.title}`}>
    <div class="blog-post-content">
    <!-- Featured badge -->
    {showFeatured && post.data.featured && (
      <div class="featured-badge">
        <span class="featured-icon">⭐</span>
        Featured
      </div>
    )}

    <!-- Post metadata -->
    <div class="post-meta">
      <time class="date" datetime={post.data.date.toISOString()}>
        {post.data.date.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        })}
      </time>
      {post.data.author && post.data.author !== 'Bruce Denham' && (
        <span class="author">by {post.data.author}</span>
      )}
    </div>

    <!-- Post title and excerpt -->
    <h3 class="post-title">
      {post.data.title}
    </h3>
    
    <p class="post-excerpt">{post.data.excerpt}</p>

    <!-- Tags and category -->
    {(showCategory || showTags) && (post.data.category || post.data.tags?.length) && (
      <Tags 
        tags={showTags ? post.data.tags : []} 
        category={showCategory ? post.data.category : undefined}
        class="post-card-tags"
      />
    )}

    <!-- Read more link -->
    <span class="read-more">
      Read more →
    </span>
    </div>
  </a>
</article>

<style>
  .blog-post-card {
    position: relative;
    margin-bottom: 1.5rem;
  }

  .card-link {
    display: block;
    background: var(--bg-card);
    border: none; /* Remove border, use shadow instead */
    border-radius: 1rem;
    padding: 1.5rem;
    box-shadow: 0 2px 8px var(--shadow-secondary);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); /* Smooth easing */
    text-decoration: none;
    color: inherit;
  }

  .card-link:hover {
    background: var(--bg-card-hover);
    transform: translateY(-4px); /* More pronounced lift */
    box-shadow: 0 12px 24px var(--shadow-primary); /* Deeper shadow */
  }

  .blog-post-card.featured .card-link {
    border-color: var(--accent-primary);
    background: linear-gradient(135deg, var(--bg-card) 0%, var(--accent-content) 100%);
  }

  .featured-badge {
    position: absolute;
    top: -0.5rem;
    right: 1rem;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.375rem 0.75rem;
    background: var(--accent-primary);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 1rem;
    box-shadow: 0 2px 8px var(--shadow-primary);
  }

  .featured-icon {
    font-size: 0.875rem;
  }

  .blog-post-content {
    position: relative;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    font-size: 0.875rem;
    color: var(--text-tertiary);
  }

  .date {
    color: var(--accent-primary);
    font-weight: 500;
  }

  .author {
    opacity: 0.8;
  }

  .post-title {
    margin: 0 0 0.75rem 0;
    font-size: 1.375rem;
    font-weight: 600;
    line-height: 1.3;
    color: var(--text-primary);
  }

  .post-excerpt {
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0 0 1rem 0;
  }

  .post-card-tags {
    margin: 1rem 0;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    color: var(--text-tertiary);
    font-weight: 400;
    font-size: 0.875rem;
    pointer-events: none; /* Since the whole card is clickable */
  }

  /* Mobile responsive */
  @media (max-width: 640px) {
    .card-link {
      padding: 1.25rem;
    }
    
    .blog-post-card {
      margin-bottom: 1.25rem;
    }

    .post-title {
      font-size: 1.25rem;
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }
  }
</style>
