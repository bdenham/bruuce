---
interface Props {
  post: {
    slug: string;
    data: {
      title: string;
      excerpt: string;
      date: Date;
    };
  };
  showEmoji?: boolean;
}

const { post, showEmoji = true } = Astro.props;
---

<a href={`/blog/${post.slug}/`} class="blog-post-link">
  <div class="blog-post">
    <div class="blog-post-content">
      <h3>{post.data.title}</h3>
      <p>{post.data.excerpt}</p>
      <p class="date">
        Published:{' '}
        {
          post.data.date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })
        }
      </p>
    </div>
  </div>
</a>
