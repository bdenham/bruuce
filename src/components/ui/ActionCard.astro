---
interface Props {
  icon: string;
  title: string;
  description: string;
  href: string;
  variant?: 'primary' | 'secondary';
  target?: string;
  rel?: string;
  ariaLabel?: string;
}

const {
  icon,
  title,
  description,
  href,
  variant = 'secondary',
  target,
  rel,
  ariaLabel,
} = Astro.props;
---

<a class={`action-card ${variant}`} href={href} target={target} rel={rel} aria-label={ariaLabel}>
  <div class="card-icon" aria-hidden="true">{icon}</div>
  <div class="card-content">
    <h2 class="card-title">{title}</h2>
    <p class="card-description">{description}</p>
  </div>
</a>

<style>
  .action-card {
    display: flex;
    align-items: center;
    gap: 20px; /* Increased from 16px for more breathing room */
    padding: 24px; /* Increased from 20px since we removed the arrow */
    border-radius: 16px;
    text-decoration: none;
    color: inherit;
    background: var(--bg-card);
    border: none; /* Remove border, use shadow instead */
    box-shadow: 0 2px 8px var(--shadow-secondary);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); /* Smooth easing */
    position: relative;
    overflow: hidden;
    will-change: transform;
  }


  .action-card:hover {
    transform: translateY(-4px) !important;
    background: var(--bg-card) !important;
    box-shadow: 0 12px 32px var(--shadow-primary) !important;
  }

  /* Ensure secondary cards have consistent styling */
  .action-card.secondary {
    box-shadow: 0 2px 8px var(--shadow-secondary) !important;
  }

  .action-card.secondary:hover {
    transform: translateY(-4px) !important;
    background: var(--bg-card-hover) !important;
    box-shadow: 0 12px 32px var(--shadow-primary) !important;
  }

  .action-card > * {
    position: relative;
    z-index: 2;
  }

  .card-icon {
    font-size: 2.5rem;
    line-height: 1;
    flex-shrink: 0;
    filter: drop-shadow(0 2px 4px var(--shadow-secondary));
  }

  .action-card.primary .card-icon {
    transform: scale(1.1);
  }

  .card-content {
    flex: 1;
    min-width: 0;
  }

  .card-title {
    margin: 0 0 6px 0;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary);
    line-height: 1.2;
  }

  .action-card.primary .card-title {
    color: var(--accent-primary);
  }

  .card-description {
    margin: 0;
    font-size: 1rem;
    color: var(--text-tertiary);
    font-weight: 400;
    line-height: 1.5;
  }


  /* Mobile responsive */
  @media (max-width: 640px) {
    .action-card {
      padding: 20px; /* Increased from 16px for better mobile spacing */
      gap: 16px; /* Increased from 12px for better mobile spacing */
    }

    .card-icon {
      font-size: 2rem;
    }

    .card-title {
      font-size: 1.1rem;
    }

    .card-description {
      font-size: 0.85rem;
    }
  }
</style>
