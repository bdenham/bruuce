import { getCollection } from 'astro:content';

// Get all blog posts and sort by date (newest first)
const blogPosts = await getCollection('blog');
const sortedPosts = blogPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Get current URL for active state highlighting
const currentPath = Astro.url.pathname;

// Simplified title shortening - much faster processing
function getShortenedTitle(title: string): string {
  if (title.length <= 30) return title;
  
  // Simple truncation with smart word boundary
  const truncated = title.substring(0, 30);
  const lastSpace = truncated.lastIndexOf(' ');
  return lastSpace > 15 ? truncated.substring(0, lastSpace) + '...' : truncated + '...';
}
