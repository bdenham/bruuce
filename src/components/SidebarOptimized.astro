  /* Mobile responsive - fixed z-index and positioning */
  @media (max-width: 1023px) {
    .sidebar {
      z-index: 300; /* Above overlay */
    }

    .sidebar-toggle {
      display: flex;
      z-index: 400; /* Above everything */
    }

    .sidebar-nav {
      transform: translateX(-100%);
      transition: transform 0.3s ease;
      z-index: 350; /* Above overlay, below toggle */
      position: fixed; /* Ensure proper positioning */
      width: 280px;
    }

    .sidebar.open .sidebar-nav {
      transform: translateX(0);
    }

    .sidebar-close {
      display: block;
      z-index: 360; /* Above nav content */
      position: relative;
    }

    .sidebar-overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.3); /* Lighter overlay */
      opacity: 0;
      visibility: hidden;
      transition:
        opacity 0.3s ease,
        visibility 0.3s ease;
      z-index: 250; /* Below sidebar but above content */
      pointer-events: none; /* Don't block sidebar interactions */
    }

    .sidebar.open .sidebar-overlay {
      opacity: 1;
      visibility: visible;
      pointer-events: auto; /* Allow clicks to close */
    }

    /* Ensure nav links work on mobile */
    .sidebar.open .sidebar-nav a {
      pointer-events: auto;
      position: relative;
      z-index: 360;
    }
  }

  /* Global body class for sidebar open state - avoids forced reflows */
  :global(body.sidebar-open) {
    overflow: hidden !important;
  }
</style>

<script>
  // Mobile sidebar functionality - robust and reliable
  document.addEventListener('DOMContentLoaded', function () {
    const sidebar = document.getElementById('sidebar');
    const toggle = document.getElementById('sidebar-toggle');
    const close = document.getElementById('sidebar-close');
    const overlay = document.getElementById('sidebar-overlay');

    function openSidebar() {
      sidebar?.classList.add('open');
      document.body.classList.add('sidebar-open'); // Use CSS class instead of direct style
    }

    function closeSidebar() {
      sidebar?.classList.remove('open');
      document.body.classList.remove('sidebar-open'); // Use CSS class instead of direct style
    }

    function toggleSidebar() {
      if (sidebar?.classList.contains('open')) {
        closeSidebar();
      } else {
        openSidebar();
      }
    }

    // Event listeners with error handling
    toggle?.addEventListener('click', function (e) {
      e.preventDefault();
      e.stopPropagation();
      toggleSidebar();
    });

    close?.addEventListener('click', function (e) {
      e.preventDefault();
      e.stopPropagation();
      closeSidebar();
    });

    overlay?.addEventListener('click', function (e) {
      e.preventDefault();
      e.stopPropagation();
      closeSidebar();
    });

    // Close on escape key
    document.addEventListener('keydown', function (e) {
      if (e.key === 'Escape' && sidebar?.classList.contains('open')) {
        closeSidebar();
      }
    });

    // Close sidebar when clicking internal links on mobile
    // Use media query instead of window.innerWidth to avoid forced reflows
    const mobileMediaQuery = window.matchMedia('(max-width: 1023px)');
    const sidebarLinks = sidebar?.querySelectorAll('a[href^="/"]');
    sidebarLinks?.forEach((link) => {
      link.addEventListener('click', function () {
        if (mobileMediaQuery.matches) {
          closeSidebar();
        }
      });
    });
  });
</script>
