---
interface Props {
  date: string;
  title: string;
  type: 'feature' | 'update' | 'fix' | 'deprecation';
  components: string[];
}

const { date, title, type, components } = Astro.props;

const typeColors = {
  feature: 'var(--sl-color-blue-5)',
  update: 'var(--sl-color-green-5)',
  fix: 'var(--sl-color-orange-5)',
  deprecation: 'var(--sl-color-red-5)'
};

const typeLabels = {
  feature: 'New Feature',
  update: 'Update',
  fix: 'Bug Fix',
  deprecation: 'Deprecation'
};

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="changelog-entry" data-type={type} data-components={components.join(',')}>
  <div class="entry-header">
    <div class="entry-meta">
      <time datetime={date}>{formattedDate}</time>
      <span class="type-badge" style={`background-color: ${typeColors[type]}`}>
        {typeLabels[type]}
      </span>
    </div>
    <h2 class="entry-title">{title}</h2>
    <div class="component-tags">
      {components.map(component => (
        <span class="component-tag">{component}</span>
      ))}
    </div>
  </div>
  <div class="entry-content">
    <slot />
  </div>
</article>

<style>
  .changelog-entry {
    padding: 1.5rem;
    border: 1px solid var(--sl-color-gray-3);
    border-radius: var(--sl-border-radius-medium);
    background: var(--sl-color-white);
  }

  .entry-header {
    margin-bottom: 1rem;
  }

  .entry-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  time {
    color: var(--sl-color-gray-6);
    font-size: 0.9rem;
  }

  .type-badge {
    padding: 0.25rem 0.75rem;
    border-radius: var(--sl-border-radius-small);
    color: var(--sl-color-white);
    font-size: 0.8rem;
    font-weight: 500;
  }

  .entry-title {
    font-size: 1.5rem;
    margin: 0.5rem 0;
    color: var(--sl-color-gray-8);
  }

  .component-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .component-tag {
    padding: 0.25rem 0.75rem;
    background: var(--sl-color-gray-1);
    border-radius: var(--sl-border-radius-small);
    font-size: 0.8rem;
    color: var(--sl-color-gray-7);
  }

  .entry-content {
    color: var(--sl-color-gray-7);
    line-height: 1.6;
  }

  .entry-content :global(ul) {
    margin: 0.5rem 0;
    padding-left: 1.5rem;
  }

  .entry-content :global(li) {
    margin: 0.25rem 0;
  }
</style> 