<style>
  .work-content {
    max-width: 1000px;
    margin: 0 auto;
  }

  .work-intro {
    font-size: 1rem;
    color: var(--text-tertiary);
    line-height: 1.7;
    margin-bottom: 32px;
    font-weight: 400;
  }

  .project-card {
    background: linear-gradient(135deg, var(--bg-card), rgba(167, 139, 250, 0.02));
    border: 2px solid rgba(148, 163, 184, 0.4);
    border-radius: 16px;
    padding: 24px;
    transition: all 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 32px var(--shadow-secondary);
    border-color: var(--accent-primary);
  }

  .project-header {
    margin-bottom: 16px;
  }

  .project-header h3 {
    color: var(--text-primary);
    margin: 0 0 12px 0;
    font-size: 1.25rem;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .tag {
    background: var(--tag-bg);
    color: var(--tag-text);
    padding: 4px 12px;
    border-radius: 16px;
    font-size: 0.75rem;
    font-weight: 600;
    border: 1px solid var(--border-primary);
