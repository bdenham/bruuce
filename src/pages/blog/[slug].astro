---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import SEO from '../../components/SEO.astro';
import Tags from '../../components/Tags.astro';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  // Filter out draft posts in production
  const publishedPosts = blogPosts.filter(post => !post.data.draft);
  return publishedPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// SEO data
const seoTitle = post.data.seo?.title || post.data.title;
const seoDescription = post.data.seo?.description || post.data.excerpt;
const publishedTime = post.data.date.toISOString();
---

<BaseLayout
  title={`${post.data.title} - Bruce Denham`}
  description={post.data.excerpt}
  showBackLink={true}
  backLinkText="â† Back to Blog"
  backLinkHref="/blog/"
  footerText="Thanks for reading! "
  footerLinkText="Browse more posts"
  footerLinkHref="/blog/"
>
  <!-- Enhanced SEO -->
  <SEO
    slot="head"
    title={seoTitle}
    description={seoDescription}
    type="article"
    image={post.data.image}
    imageAlt={post.data.imageAlt}
    publishedTime={publishedTime}
    author={post.data.author}
    tags={post.data.tags}
    category={post.data.category}
    canonical={post.data.seo?.canonical}
    noindex={post.data.seo?.noindex}
  />

  <!-- Post metadata -->
  <p class="date animate-in animate-delay-100">
    Published: {
      post.data.date.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric',
      })
    }
  </p>
  
  <!-- Post title -->
  <h1 id="post-title" class="animate-in animate-delay-150">{post.data.title}</h1>

  <!-- Tags and category -->
  <Tags 
    tags={post.data.tags} 
    category={post.data.category}
    class="post-tags animate-in animate-delay-200"
  />

  <!-- Post content -->
  <div class="content animate-in animate-delay-250">
    <Content />
  </div>
</BaseLayout>

<style>
  /* Blog post specific styles */
  .date {
    margin: 0;
    color: var(--accent-primary);
    font-size: 1rem;
  }

  #post-title {
    margin: 1rem 0;
    font-size: 2.5rem;
    line-height: 1.1;
    color: var(--text-primary);
  }

  .post-tags {
    margin: 1rem 0 2rem 0;
  }

  /* Mobile responsive adjustments */
  @media (max-width: 640px) {
    .date {
      font-size: 0.9rem;
    }

    #post-title {
      font-size: 2rem;
      line-height: 1.2;
      margin: 0.75rem 0;
    }

    .post-tags {
      margin: 0.75rem 0 1.5rem 0;
    }
  }

  @media (max-width: 480px) {
    #post-title {
      font-size: 1.75rem;
    }
  }

  /* Responsive content area */
  .content {
    min-height: 200px;
    overflow: visible;
    position: relative;
    z-index: 1;
    width: 100%;
    /* max-width handled by typography-optimized.css */
  }

  /* Responsive typography for blog content - balanced hierarchy */
  .content :global(p) {
    font-size: 1.1875rem; /* 19px - slightly larger base for better readability */
    line-height: 1.7;
    margin-bottom: 1.5rem;
    color: var(--text-tertiary);
    font-weight: 400;
  }

  .content :global(h1) {
    font-size: 1.875rem; /* 30px - 1.58x body text, more balanced */
    line-height: 1.3;
    margin: 2.5rem 0 1.25rem 0;
    color: var(--text-primary);
    font-weight: 600; /* Less heavy, more elegant */
    letter-spacing: -0.015em;
  }

  .content :global(h2) {
    font-size: 1.325rem;
    line-height: 1.3;
    margin: 2.25rem 0 0.35rem;
    color: var(--accent-primary);
    font-weight: 600;
    letter-spacing: -.01em;
  }

  .content h3 {
    font-size: 1.25rem;
    line-height: 1.4;
    margin: 2rem 0 0.5rem;
    color: var(--text-primary);
    font-weight: 600;
  }


  .content :global(h4) {
    font-size: 1.25rem; /* 20px - 1.05x body text, subtle but clear */
    line-height: 1.4;
    margin: 1.75rem 0 0.875rem 0;
    color: var(--text-primary);
    font-weight: 600;
  }

  .content :global(ul),
  .content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
  }

  .content :global(li) {
    font-size: 1.1875rem; /* Match paragraph size for consistency */
    line-height: 1.7; /* Match paragraph line-height */
    margin-bottom: 0.75rem;
    color: var(--text-tertiary);
    font-weight: 400;
  }

  .content :global(blockquote) {
    margin: 2rem 0;
    padding: 1rem 1.5rem;
    border-left: 4px solid var(--accent-primary);
    background: var(--bg-card);
    border-radius: 0.5rem;
    font-style: italic;
  }

  .content :global(code) {
    background: var(--bg-card);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
    color: var(--accent-primary);
  }

  .content :global(pre) {
    background: var(--bg-card);
    padding: 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    font-size: 0.875rem;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
    color: var(--text-primary);
  }

  /* WCAG-compliant theme-aware link styling */
  .content :global(a) {
    color: var(--accent-primary);
    text-decoration: underline;
    text-decoration-color: var(--accent-primary);
    text-underline-offset: 2px;
    transition: color 0.2s ease, text-decoration-color 0.2s ease;
  }

  .content :global(a:hover) {
    color: var(--accent-hover);
    text-decoration-color: var(--accent-hover);
  }

  .content :global(a:visited) {
    color: var(--accent-primary);
    opacity: 0.8;
  }

  .content :global(a:active) {
    color: var(--accent-hover);
    transform: translateY(1px);
  }

  .content :global(a:focus-visible) {
    outline: 3px solid var(--accent-primary);
    outline-offset: 2px;
    border-radius: 2px;
  }

  /* Mobile responsive typography - balanced hierarchy */
  @media (max-width: 640px) {
    .content :global(p) {
      font-size: 1.0625rem; /* 17px - larger for mobile readability */
      line-height: 1.7;
      margin-bottom: 1.25rem;
      font-weight: 400;
    }

    .content :global(h1) {
      font-size: 1.625rem; /* 26px - 1.53x body text, more balanced */
      margin: 2.25rem 0 1.125rem 0;
      letter-spacing: -0.01em;
    }

    .content :global(h2) {
      font-size: 1.25rem; /* 20px - smaller for mobile */
      margin: 2rem 0 0.35rem 0;
      color: var(--accent-primary);
      letter-spacing: -0.005em;
    }

    .content h3 {
      font-size: 1.125rem; /* 18px - scaled down for mobile */
      margin: 1.5rem 0 0.5rem;
    }

    .content :global(h4) {
      font-size: 1.125rem; /* 18px - 1.06x body text */
      margin: 1.5rem 0 0.75rem 0;
    }

    .content :global(li) {
      font-size: 1.0625rem; /* Match paragraph size */
      line-height: 1.7;
      margin-bottom: 0.625rem;
      font-weight: 400;
    }

    .content :global(blockquote) {
      margin: 1.5rem 0;
      padding: 0.75rem 1rem;
    }

    .content :global(pre) {
      padding: 1rem;
      font-size: 0.8125rem;
      margin: 1rem 0;
    }
  }

  /* Tablet responsive typography - balanced hierarchy */
  @media (max-width: 768px) and (min-width: 641px) {
    .content :global(p) {
      font-size: 1.125rem; /* 18px - balanced for tablets */
      line-height: 1.7;
      font-weight: 400;
    }

    .content :global(h1) {
      font-size: 1.75rem; /* 28px - 1.56x body text */
      margin: 2.375rem 0 1.1875rem 0;
      letter-spacing: -0.01em;
    }

    .content :global(h2) {
      font-size: 1.3125rem; /* 21px - slightly smaller for tablet */
      margin: 2.125rem 0 0.35rem 0;
      color: var(--accent-primary);
      letter-spacing: -0.005em;
    }

    .content h3 {
      font-size: 1.1875rem; /* 19px - scaled for tablet */
      margin: 1.75rem 0 0.5rem;
    }

    .content :global(h4) {
      font-size: 1.1875rem; /* 19px - 1.06x body text */
      margin: 1.625rem 0 0.8125rem 0;
    }

    .content :global(li) {
      font-size: 1.125rem; /* Match paragraph size */
      line-height: 1.7;
      font-weight: 400;
    }
  }

  /* Ensure tags don't interfere with content flow */
  .post-tags :global(.tags-container) {
    position: relative;
    z-index: 1;
  }
</style>
