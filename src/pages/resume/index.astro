<style>
  /* PDF Download Section Styling */
  .pdf-download-section {
    margin: 2rem 0;
    display: flex;
  }

  .pdf-download-link {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 16px 24px;
    background: var(--bg-card);
    border: 2px solid var(--accent-primary);
    border-radius: 12px;
    text-decoration: none;
    color: var(--text-primary);
    transition: var(--transition-bounce);
    box-shadow: 0 2px 8px rgba(0, 170, 255, 0.1);
  }

  .pdf-download-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 170, 255, 0.2);
    border-color: var(--accent-hover);
  }

  .pdf-icon {
    flex-shrink: 0;
    color: var(--accent-primary);
    display: flex;
    align-items: center;
  }

  .pdf-icon svg {
    width: 24px;
    height: 24px;
    stroke: currentColor;
  }

  .pdf-text {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .pdf-text strong {
    color: var(--accent-primary);
    font-size: 1.1rem;
    font-weight: 600;
  }

  .pdf-text small {
    color: var(--text-tertiary);
    font-size: 0.875rem;
    line-height: 1.3;
  }

  .download-arrow {
    font-size: 1.25rem;
    color: var(--accent-primary);
    flex-shrink: 0;
  }

  /* Mobile responsiveness */
  @media (max-width: 640px) {
    .pdf-download-link {
      padding: 12px 16px;
      gap: 8px;
    }

    .pdf-text strong {
      font-size: 1rem;
    }

    .pdf-text small {
      font-size: 0.8rem;
    }
  }

  .featured-section {
    border: 2px solid var(--accent-primary);
    border-radius: 16px;
    padding: 32px;
    background: linear-gradient(135deg, var(--bg-card), rgba(167, 139, 250, 0.02));
    transition: all 0.3s ease;
    /* Animation for featured awards section */
    opacity: 0;
    transform: translateY(20px);
    animation: slideInUp 400ms cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 100ms;
  }

  .featured-section h2 {
    color: var(--accent-primary);
    border-bottom: 2px solid var(--accent-primary);
    margin-top: 0;
  }

  .achievements {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .achievements li {
    color: var(--text-secondary);
    margin-bottom: 12px;
    padding-left: 20px;
    position: relative;
    line-height: 1.6;
  }

  .achievements li::before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: var(--accent-primary);
    font-weight: bold;
  }

  .awards-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .awards-list li {
    color: var(--text-tertiary);
    margin-bottom: 8px;
    padding-left: 20px;
    position: relative;
  }

  .awards-list li::before {
    content: 'üèÜ';
    position: absolute;
    left: 0;
  }

  .awards-list strong {
    color: var(--text-primary);
  }
</style>
