<style>
  .resume-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .contact-section {
    background: var(--bg-card);
    border: 1px solid var(--border-secondary);
    border-radius: 12px;
    padding: 24px;
    margin-bottom: 32px;
  }

  .contact-section h2 {
    margin: 0 0 16px 0;
    color: var(--text-primary);
    font-size: 24px;
  }

  .contact-details {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 12px;
  }

  .contact-item {
    color: var(--text-tertiary);
  }

  .contact-item strong {
    color: var(--text-secondary);
  }

  .contact-item a {
    color: var(--accent-primary);
    text-decoration: none;
  }

  .contact-item a:hover {
    color: var(--accent-hover);
    text-decoration: underline;
  }

  .summary-section,
  .skills-section,
  .experience-section,
  .education-section,
  .awards-section,
  .endorsements-section {
    margin-bottom: 40px;
  }

  .summary-section h2,
  .skills-section h2,
  .experience-section h2,
  .education-section h2,
  .awards-section h2,
  .endorsements-section h2 {
    color: var(--text-primary);
    font-size: 28px;
    margin-bottom: 20px;
    border-bottom: 2px solid var(--border-primary);
    padding-bottom: 8px;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
  }

  .skill-category {
    background: var(--bg-card);
    border: 1px solid var(--border-secondary);
    border-radius: 12px;
    padding: 20px;
  }

  .skill-category h3 {
    color: var(--text-primary);
    margin: 0 0 16px 0;
    font-size: 20px;
  }

  .skill-category ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .skill-category li {
    color: var(--text-tertiary);
    margin-bottom: 8px;
    padding-left: 16px;
    position: relative;
  }

  .skill-category li::before {
    content: '▸';
    position: absolute;
    left: 0;
    color: var(--accent-primary);
  }

  .job {
    background: var(--bg-card);
    border: 1px solid var(--border-secondary);
    border-radius: 12px;
    padding: 24px;
    margin-bottom: 24px;
  }

  .job-header {
    border-bottom: 1px solid var(--border-secondary);
    padding-bottom: 16px;
    margin-bottom: 16px;
  }

  .job-header h3 {
    color: var(--text-primary);
    margin: 0 0 8px 0;
    font-size: 24px;
  }

  .job-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 8px;
  }

  .job-title {
    color: var(--accent-primary);
    font-size: 18px;
    font-weight: 600;
  }

  .job-period {
    color: var(--text-muted);
    font-size: 16px;
    font-weight: 500;
  }

  .achievements {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .achievements li {
    color: var(--text-tertiary);
    margin-bottom: 12px;
    padding-left: 20px;
    position: relative;
    line-height: 1.6;
  }

  .achievements li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--accent-primary);
    font-weight: bold;
  }

  .education-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
  }

  .degree {
    background: var(--bg-card);
    border: 1px solid var(--border-secondary);
    border-radius: 12px;
    padding: 20px;
    text-align: center;
    color: var(--text-tertiary);
  }

  .degree strong {
    color: var(--text-primary);
    display: block;
    margin-bottom: 8px;
    font-size: 18px;
  }

  .awards-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .awards-list li {
    color: var(--text-tertiary);
    margin-bottom: 8px;
    padding-left: 20px;
    position: relative;
  }

  .awards-list li::before {
    content: '🏆';
    position: absolute;
    left: 0;
  }

  .awards-list strong {
    color: var(--text-primary);
  }

  .endorsements-section p {
    color: var(--text-tertiary);
  }

  .endorsements-section a {
    color: var(--accent-primary);
    text-decoration: none;
  }

  .endorsements-section a:hover {
    color: var(--accent-hover);
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .contact-details {
      grid-template-columns: 1fr;
    }

    .skills-grid {
      grid-template-columns: 1fr;
    }

    .education-grid {
      grid-template-columns: 1fr;
    }

    .job-meta {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
