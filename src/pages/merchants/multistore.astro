---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import Multistore from './multistore.mdx';
---

<StarlightPage
  frontmatter={{
    title: 'Customize the cart drop-in component',
    description: 'Learn how to customize the cart drop-in component.',
    tableOfContents: true,
    minHeadingLevel: 4,
    editUrl:
      'https://github.com/commerce-docs/microsite-commerce-storefront/blob/api-playground/src/pages/videos/customize-cart.astro',
  }}
  sidebar={[
    {
      label: 'Merchants',
      items: [
        { label: 'Overview', link: '/merchants/' },
        { label: 'Multi-store setup', link: '/merchants/multistore/' },
      ],
    },
  ]}
>
  <style is:global>
    /* .sl-container.sl-container {
      max-width: 100%;
    } */
    .meta.sl-flex {
      margin-top: 0;
      margin-bottom: 1rem;
      padding-top: 0;
    }
  </style>

  <Multistore />

</StarlightPage>