      .card-base:hover {
        background: var(--bg-card-hover);
        transform: translateY(-4px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.5);
      }

      /* CRITICAL ANIMATIONS - Essential for Speed Index */
      .animate-in {
        opacity: 0;
        transform: translate3d(0, 10px, 0); /* Reduced from 20px for faster feel */
        will-change: transform, opacity;
        animation: slideInUp 0.2s cubic-bezier(0.4, 0, 0.2, 1) forwards; /* Faster animation */
