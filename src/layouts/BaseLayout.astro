      }

      @keyframes slideInUp {
        from {
          opacity: 0;
          transform: translate3d(0, 10px, 0); /* Match reduced distance */
        }
        to {
          opacity: 1;
          transform: translate3d(0, 0, 0);
        }
      }

      @media (prefers-reduced-motion: reduce) {
        .animate-in {
          opacity: 1;
          transform: none;
          animation: none;
        }
      }
    </style>

